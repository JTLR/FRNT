{
    "name": "FRNT",
    "version": "2.0.0",
    "description": "NPM dependencies for FRNT frontend framework",
    "author": "Joe Taylor",
    "repository": {
        "type": "git",
        "url": "https://github.com/JTLR/FRNT"
    },
    "scripts": {
        "precommit": "lint-staged",
        "build": "webpack -p",
        "watch": "webpack --watch"
    },
    "lint-staged": {
        "*.{js,json,css,md,ts,scss}": [
            "prettier --write --tab-width 4",
            "git add"
        ],
        "src/frontend/**/*.scss": [
            "node automation/update-cache-busting.js css",
            "git add"
        ],
        "src/frontend/js/main.js": [
            "node automation/update-cache-busting.js js",
            "git add"
        ]
    },
    "dependencies": {
    }
}
